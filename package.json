{
  "private": true,
  "sideEffects": false,
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "start": "remix-serve build",
    "format": "prettier \"app/**/*.ts\" \"app/**/*.tsx\" --write --print-width 100 --single-quote --no-semi --trailing-comma-none",
    "build:sprites": "ts-node --require tsconfig-paths/register ./scripts/sprites.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.10.5",
    "@emotion/server": "^11.10.0",
    "@mantine/carousel": "^5.10.1",
    "@mantine/core": "^5.10.1",
    "@mantine/dates": "^5.10.1",
    "@mantine/dropzone": "^5.10.1",
    "@mantine/hooks": "^5.10.1",
    "@mantine/modals": "^5.10.1",
    "@mantine/notifications": "^5.10.1",
    "@mantine/nprogress": "^5.10.1",
    "@mantine/remix": "^5.10.1",
    "@mantine/tiptap": "^5.10.1",
    "@prisma/client": "^4.1.1",
    "@remix-run/node": "^1.7.5",
    "@remix-run/react": "^1.7.5",
    "@remix-run/serve": "^1.7.1",
    "@remix-run/vercel": "^1.7.0",
    "@tabler/icons": "^2.0.0",
    "@tiptap/extension-link": "^2.0.0-beta.209",
    "@tiptap/react": "^2.0.0-beta.209",
    "@tiptap/starter-kit": "^2.0.0-beta.209",
    "aws-sdk": "^2.1193.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.29.1",
    "dayjs": "^1.11.7",
    "embla-carousel-react": "^7.0.9",
    "esbuild-register": "^3.3.3",
    "prisma": "^4.1.1",
    "quill": "^1.3.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-quilljs": "^1.3.3",
    "remix": "^1.7.5",
    "remix-auth": "^3.4.0",
    "remix-auth-discord": "^1.2.0",
    "remix-auth-form": "^1.3.0",
    "remix-auth-github": "^1.3.0",
    "remix-auth-socials": "^2.0.1",
    "remix-utils": "^4.4.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.1",
    "@remix-run/eslint-config": "^1.7.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/quill": "^2.0.9",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">=14"
  }
}
